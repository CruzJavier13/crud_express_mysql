<%- include ('../layouts/header.ejs') %> 

<form action="../update/" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id_product" value="<%=products.id_product %> ">
      <div class="form-group">
       <!-- <label for="">State</label>-->
        <input type="hidden" value="1" autocomplete="off" name="state_product" class="form-control" aria-describedby="helpId">
      </div>
      <div class="form-group">
          <label for="">Name Product</label>
          <input type="text" value="<%=products.name_product %> " autocomplete="off" name="name_product" class="form-control" placeholder="" >
        </div>
        <div class="form-group">
          <label for="">Brand Product</label>
          <input type="text" value="<%=products.brand_product %> " autocomplete="off" name="brand_product" id="" class="form-control" placeholder="" aria-describedby="helpId">
        </div>
        <div class="form-group">
          <label for="">Code Product</label>
          <input type="text"  value="<%=products.code_product %> " autocomplete="off" name="code_product" id="" class="form-control" placeholder="" aria-describedby="helpId">
        </div>
        <div class="form-group">
          <label for="">Image</label>
          <img class="img-thumbnail" src="../../images/<%=products.image_product %>" width="150" alt="">
          <input type="file" value="../../images/<%=products.image_product %>"  autocomplete="off" name="image_product" id="" class="form-control" placeholder="" aria-describedby="helpId">
        </div>
        <div class="form-group">
          <label for="">Presentation Product</label>
          <input type="text" value="<%=products.presentation_product %> " autocomplete="off" name="presentation_product" id="" class="form-control" placeholder="" aria-describedby="helpId">
        </div>
        <div class="form-group">
          <label for="">Date Created</label>
          <input type="date" value="<%=products.date_created %> " name="date_created" id="" class="form-control" placeholder="" aria-describedby="helpId">
        </div>
        <button type="submit" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">Save product</button>
        <a href="/products" class="btn btn-warning">Cancel</a>
  </form>

<%- include ('../layouts/footer.ejs') %> 